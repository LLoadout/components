{
    "name": "lloadout/components",
    "description": "With LLoadout Components you will pull in the best off class Laravel frontend components.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dieter Coopman",
            "email": "dieter@deltasolutions.be"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2",
        "livewire/livewire": "^2.0|^3.0",
        "blade-ui-kit/blade-ui-kit" : "^0.4"
    },
    "extra": {
        "laravel": {
            "providers": [
                "LLoadoutComponents\\LLoadoutComponentsServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "LLoadoutComponents\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
